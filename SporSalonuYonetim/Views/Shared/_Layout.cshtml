@using Microsoft.AspNetCore.Identity
@using SporSalonuYonetim.Models

@inject SignInManager<Kullanici> SignInManager
@inject UserManager<Kullanici> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spor Salonu Yönetim Sistemi</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-dumbbell"></i> SporSalonu
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Antrenor" asp-action="Index">Antrenörler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Hizmet" asp-action="Index">Hizmetler</a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Randevu" asp-action="Randevularim">Randevularım</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link fw-bold text-warning" asp-controller="AiTrainer" asp-action="Index">
                                    <i class="fa-solid fa-robot"></i> AI Trainer
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    YÖNETİCİ PANELİ
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Panel Anasayfa</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Kullanıcıları Yönet</a></li>
                                    <li><a class="dropdown-item" asp-controller="Roles" asp-action="Index">Rolleri Yönet</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Antrenor" asp-action="Create">Antrenör Ekle</a></li>
                                    <li><a class="dropdown-item" asp-controller="Hizmet" asp-action="Create">Hizmet Ekle</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Randevular">Tüm Randevular</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Kazanc">Kazanç Raporları</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light fw-bold" asp-controller="Home" asp-action="Index" title="Manage">
                                    Merhaba, @User.Identity.Name!
                                </a>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-danger fw-bold" style="text-decoration:none;">
                                        Çıkış Yap <i class="fa-solid fa-right-from-bracket"></i>
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Register"><i class="fa-solid fa-user-plus"></i> Kayıt Ol</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i> Giriş Yap</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-5">
        <div class="container text-center py-3">
            &copy; 2025 - Spor Salonu Yönetim Sistemi - Web Programlama Projesi
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
