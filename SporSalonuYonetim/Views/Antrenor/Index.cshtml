@model IEnumerable<SporSalonuYonetim.Models.Antrenor>

@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-users text-primary"></i> Antrenör Kadromuz</h2>
        @if (User.IsInRole("admin"))
        {
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Yeni Antrenör Ekle</a>
        }
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 50px; height: 50px; font-size: 20px;">
                                @(item.Ad?.Substring(0, 1))@(item.Soyad?.Substring(0, 1))
                            </div>
                            <div>
                                <h5 class="card-title mb-0">@item.AdSoyad</h5>
                                <small class="text-muted">
                                    @(item.Hizmetler != null && item.Hizmetler.Any()
                                        ? string.Join(", ", item.Hizmetler.Select(h => h.Ad))
                                        : "Hizmet Belirtilmemiş")
                                </small>
                            </div>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><i class="fa-solid fa-phone me-2 text-secondary"></i> @item.Telefon</li>

                            <li class="list-group-item">
                                <i class="fa-regular fa-clock me-2 text-secondary"></i>
                                @item.BaslangicSaati.ToString(@"hh\:mm") - @item.BitisSaati.ToString(@"hh\:mm")
                            </li>

                            <li class="list-group-item"><i class="fa-solid fa-building me-2 text-secondary"></i> @item.Salon?.Ad</li>
                        </ul>
                        @if (User.IsInRole("admin"))
                        {
                            <div class="mt-3 text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
