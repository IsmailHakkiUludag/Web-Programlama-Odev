@{
    ViewData["Title"] = "AI Trainer";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0"><i class="fa-solid fa-robot fa-bounce"></i> AI Smart Trainer</h2>
                    <p class="mb-0 mt-2">Sen bilgilerini gir, yapay zeka programını yazsın ve hedefini çizsin.</p>
                </div>
                <div class="card-body p-5">

                    <div id="loading" class="text-center d-none mb-4">
                        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status"></div>
                        <h4 class="mt-3">Yapay Zeka Çalışıyor...</h4>
                        <p class="text-muted">Programın yazılıyor ve hayalindeki vücut çiziliyor.<br>Lütfen 15-20 saniye bekleyin.</p>
                    </div>

                    <form asp-action="Olustur" method="post" id="aiForm">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Cinsiyet</label>
                                <select name="Cinsiyet" class="form-select">
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Yaş</label>
                                <input type="number" name="Yas" class="form-control" placeholder="25" required />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Kilo (kg)</label>
                                <input type="number" name="Kilo" class="form-control" placeholder="80" step="0.1" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Boy (cm)</label>
                                <input type="number" name="Boy" class="form-control" placeholder="180" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Hedefin Nedir?</label>
                            <select name="Hedef" class="form-select">
                                <option value="Kilo Vermek & Yağ Yakmak">Kilo Vermek & Yağ Yakmak</option>
                                <option value="Kas Kütlesi Artırmak (Hacim)">Kas Kütlesi Artırmak (Hacim)</option>
                                <option value="Fit ve Atletik Görünüm">Fit ve Atletik Görünüm</option>
                                <option value="Güç Kazanmak (Powerlifting)">Güç Kazanmak</option>
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" onclick="showLoading()">
                                <i class="fa-solid fa-wand-magic-sparkles"></i> Programımı Oluştur
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showLoading() {
        // Form geçerliyse yükleniyor ekranını aç
        if(document.getElementById('aiForm').checkValidity()) {
            document.getElementById('aiForm').style.display = 'none';
            document.getElementById('loading').classList.remove('d-none');
        }
    }
</script>