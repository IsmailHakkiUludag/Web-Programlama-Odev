@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roller";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Rol Yönetimi</h2>
        <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Yeni Rol Ekle</a>
    </div>

    <table class="table table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Rol Adı</th>
                <th>Rol ID</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td><small class="text-muted">@role.Id</small></td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğine emin misin?');">
                            <i class="fa-solid fa-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>