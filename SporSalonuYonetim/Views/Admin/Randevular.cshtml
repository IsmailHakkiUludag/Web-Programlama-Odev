@model IEnumerable<SporSalonuYonetim.Models.Randevu>

@{
    ViewData["Title"] = "Randevu Listesi";
}

<div class="container mt-5">
    <h2><i class="fa-regular fa-calendar-check text-primary"></i> Randevu Yönetimi</h2>
    <hr />

    <form method="get" action="@Url.Action("Randevular", "Admin")" class="row g-3 align-items-center mb-4 p-3 bg-light rounded shadow-sm">
        <div class="col-auto">
            <label for="tarih" class="col-form-label fw-bold">Tarih Seç:</label>
        </div>
        <div class="col-auto">
            <input type="date" id="tarih" name="tarih" class="form-control"
                   value="@(ViewBag.SeciliTarih != null ? ((DateTime)ViewBag.SeciliTarih).ToString("yyyy-MM-dd") : DateTime.Today.ToString("yyyy-MM-dd"))" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Listele</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Hizmet</th>
                    <th>Antrenör</th>
                    <th>Tarih & Saat</th>
                    <th>Üye Bilgisi</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center p-4 text-muted">
                            <i class="fa-solid fa-circle-info"></i> Seçili tarihte kayıtlı randevu bulunmamaktadır.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var randevu in Model)
                    {
                        <tr>
                            <td><span class="badge bg-secondary">@randevu.Hizmet?.Ad</span></td>
                            <td>@randevu.Antrenor?.AdSoyad</td>
                            <td>
                                <div><i class="fa-regular fa-calendar"></i> @randevu.RandevuTarihi.ToString("dd.MM.yyyy")</div>
                                <div class="fw-bold text-primary">
                                    <i class="fa-regular fa-clock"></i> @randevu.RandevuSaati.ToString(@"hh\:mm")
                                </div>
                            </td>
                            <td>
                                <strong>@randevu.MusteriAdi</strong><br />
                                <small class="text-muted">@randevu.MusteriTelefon</small>
                            </td>
                            <td>
                                @if (randevu.Durum == SporSalonuYonetim.Models.RandevuDurum.Onaylandi)
                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else if (randevu.Durum == SporSalonuYonetim.Models.RandevuDurum.Rededildi)
                                {
                                    <span class="badge bg-danger">Reddedildi</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Bekliyor</span>
                                }
                            </td>
                            <td>
                                @if (randevu.Durum == SporSalonuYonetim.Models.RandevuDurum.Bekliyor)
                                {
                                    <a href="@Url.Action("Onayla", "Admin", new { id = randevu.Id })" class="btn btn-sm btn-success me-1">
                                        <i class="fa-solid fa-check"></i> Onayla
                                    </a>
                                    <a href="@Url.Action("RedEt", "Admin", new { id = randevu.Id })" class="btn btn-sm btn-danger">
                                        <i class="fa-solid fa-xmark"></i> Reddet
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted"><i class="fa-solid fa-lock"></i> İşlem Yapıldı</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
