@model IEnumerable<SporSalonuYonetim.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Hizmetlerimiz</h2>
        @if (User.IsInRole("admin"))
        {
            <a asp-action="Create" class="btn btn-primary">Yeni Hizmet Ekle</a>
        }
    </div>

    <table class="table table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Hizmet Adı</th>
                <th>Süre (Dk)</th>
                <th>Ücret</th>
                <th>Salon</th>
                @if (User.IsInRole("admin"))
                {
                    <th>İşlemler</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ad</td>
                    <td>@item.Sure dk</td>
                    <td>@item.Ucret ₺</td>
                    <td>@item.Salon?.Ad</td>
                    @if (User.IsInRole("admin"))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
