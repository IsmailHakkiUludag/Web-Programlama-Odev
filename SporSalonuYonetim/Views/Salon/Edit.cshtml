@model SporSalonuYonetim.Models.Salon
@{
    ViewData["Title"] = "Salon Düzenle";
}

<div class="container mt-5">
    <h2>Salonu Düzenle</h2>
    <hr />
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Image" />

        <div class="mb-3">
            <label asp-for="Ad" class="form-label">Salon Adı</label>
            <input asp-for="Ad" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Adres" class="form-label">Adres</label>
            <textarea asp-for="Adres" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="TelefonNumarasi" class="form-label">Telefon</label>
            <input asp-for="TelefonNumarasi" class="form-control" />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="AcilisSaati" class="form-label">Açılış Saati</label>
                <input asp-for="AcilisSaati" type="time" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="KapanisSaati" class="form-label">Kapanış Saati</label>
                <input asp-for="KapanisSaati" type="time" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" width="100" />
            }
            <input type="file" name="imageFile" class="form-control mt-2" accept="image/*" />
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>
