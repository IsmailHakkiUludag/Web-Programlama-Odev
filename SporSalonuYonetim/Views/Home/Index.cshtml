@{
    ViewData["Title"] = "Anasayfa";
}

<div class="text-center">
    <div class="p-5 mb-4 bg-light rounded-3 shadow-sm" style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80'); background-size: cover; background-position: center; color: white;">
        <div class="container-fluid py-5">
            <h1 class="display-4 fw-bold">Spor Salonu Yönetim Sistemi</h1>
            <p class="col-md-8 fs-4 mx-auto">Sağlıklı bir yaşam için profesyonel antrenörler ve modern ekipmanlarla hizmetinizdeyiz.</p>
            @if (!User.Identity!.IsAuthenticated)
            {
                <a class="btn btn-warning btn-lg fw-bold" href="/Account/Register" role="button">Hemen Üye Ol</a>
            }
            else
            {
                <a class="btn btn-success btn-lg fw-bold" href="/Randevu/RandevuAl" role="button">Randevu Al</a>
            }
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card h-100 shadow border-0">
                <div class="card-body text-center">
                    <i class="fa-solid fa-users fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">Uzman Antrenörler</h3>
                    <p class="card-text">Alanında uzman antrenörlerimizle hedeflerinize daha hızlı ulaşın.</p>
                    <a href="/Antrenor/Index" class="btn btn-outline-primary">Eğitmenleri Gör</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow border-0">
                <div class="card-body text-center">
                    <i class="fa-solid fa-calendar-check fa-3x text-success mb-3"></i>
                    <h3 class="card-title">Kolay Randevu</h3>
                    <p class="card-text">İstediğiniz saatte, istediğiniz hocadan saniyeler içinde randevu alın.</p>
                    <a href="/Randevu/RandevuAl" class="btn btn-outline-success">Hemen Randevu Al</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow border-0">
                <div class="card-body text-center">
                    <i class="fa-solid fa-dumbbell fa-3x text-danger mb-3"></i>
                    <h3 class="card-title">Modern Hizmetler</h3>
                    <p class="card-text">Fitness, Pilates, Yoga ve daha fazlası için özel programlar.</p>
                    <a href="/Hizmet/Index" class="btn btn-outline-danger">Hizmetleri İncele</a>
                </div>
            </div>
        </div>
    </div>
</div>